<?xml version="1.0" encoding="UTF-8"?>

<?import ui.common.IconView?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<HBox alignment="CENTER_LEFT"
      maxHeight="30.0" minHeight="30.0"
      prefHeight="30.0" prefWidth="650.0"
      spacing="5.0" styleClass="tool-bar"
      xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="ui.mainwindow.MainWindowToolbarController">
    <children>
        <Label prefHeight="17.0" prefWidth="69.0" text="Enter a URL" />
        <TextField fx:id="urlField" prefWidth="118.0" HBox.hgrow="ALWAYS" />
        <Button disable="${controller.downloadButtonDisabled}" mnemonicParsing="false" onAction="#download" text="Download" />
        <Button contentDisplay="GRAPHIC_ONLY" focusTraversable="false" mnemonicParsing="false" onAction="#download" styleClass="add-url-button">
            <graphic>
<!--                <IconView glyph="PLUS2" glyphSize="16"/>-->
                <StackPane>
                    <IconView glyph="PLUS2" glyphSize="16"/>
<!--                    <Region maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="12" prefWidth="12" StackPane.alignment="TOP_RIGHT" />-->
                </StackPane>
            </graphic>
            <tooltip>
                <Tooltip text="%main.addURL.tooltip" />
            </tooltip>
        </Button>
        <ButtonBar prefHeight="30.0" HBox.hgrow="SOMETIMES">
            <buttons>
                <Button contentDisplay="GRAPHIC_ONLY" focusTraversable="false" mnemonicParsing="false" onAction="#download" styleClass="add-url-button">
                    <graphic>
                        <StackPane>
                            <IconView glyph="PLUS2" glyphSize="16"/>
<!--                            <Region maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="12" prefWidth="12" StackPane.alignment="TOP_RIGHT" />-->
                        </StackPane>
                    </graphic>
                    <tooltip>
                        <Tooltip text="%main.addURL.tooltip" />
                    </tooltip>
                </Button>
                <Button mnemonicParsing="false" text="Resume" />
                <Button mnemonicParsing="false" text="Pause" />
                <Button mnemonicParsing="false" text="Remove" />
            </buttons>
        </ButtonBar>
    </children>
</HBox>
